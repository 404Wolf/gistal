{
  "manifest_version": 3,
  "name": "Valtown Gist Runner",
  "description": "Run code snippets from anywhere on the web in val.town vals",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_title": "Find Code"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]
}
